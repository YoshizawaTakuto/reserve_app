<div class="user-rooms"></div>
    <div class="container">
        <div class="user-rooms-title">
            <%= image_tag @user.image.url , class: "user-img" %>
            <h1>登録済みルーム一覧</h1>
        </div>
        <div class="user-room-content">
            <table>
                <thead>
                    <tr>
                        <th>ルーム画像</th>
                        <th>ルーム名</th>
                        <th>ルーム紹介</th>
                        <th>料金</th>
                        <th>作成日時</th>
                    </tr>
                </thead>
                <tbody>
                <% @rooms.each do |room| %>
                 <tr>
                    <td>
                      <%= image_tag room.image.url, class:"user-room-img" %>
                    </td>
                    <td><%= link_to(room.name, room, class:"room-name") %></td>
                    <td><%= room.content %></td>
                    <td>¥ <%= room.fee %></td>
                    <td><%= room.created_at.to_s(:datetime) %></td>
                 </tr>
                <% end %>
                </tbody>
            </table>
        </div>
    </div>
</div>