<div class="sign-up">
    <div class="container">
        <div class="sign-up-wrapper editwrapper">
            <p class="sign-up-title">ログイン</p>
            <div class="alert">
             <%= @error_message %>
            </div>
             <%= form_with(url: @user) do |f| %>
              <ul>
               <li>
                <%= f.text_field :email, class: "text-field", placeholder: "メールアドレス",　value: @email %>
               </li>
               <li>
                <%= f.password_field :password, class: "text-field", placeholder: "パスワード" %>
               </li>
                <li>
                <%= f.password_field :password_confirmation, class: "text-field", placeholder: "パスワード確認" %>
               </li>
               <p><%= f.submit "ログイン", class: "submit btn" %></p>
             <% end %>
        </div>
    </div>
</div>