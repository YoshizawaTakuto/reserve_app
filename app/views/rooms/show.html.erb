<div class="show-room">
    <div class="container">
        <div class="show-room-wrapper">
            <div class="show-room-content">
                <div class="show-image">
                    <%= image_tag @room.image.url, class: "show-img" %>
                </div>
                <div class="show-line info">
                    <div class="show-room-user">
                     <%= link_to("/users/#{@room.user.id}") do %>
                      <%= image_tag @room.user.image.url, class: "user-img" %>
                     <% end %>
                    </div>
                    <div class="room-info">
                        <h3><%= @room.name %></h3>
                        <p><%= @room.address %></p>
                    </div>
                </div>
            
                <div class="show-line">
                    <p><%= @room.content %></p>
                </div>
            </div>
            <div class="show-room-reserve">
                <h3><%="¥ #{@room.fee} / 日"%></h3>
                <p class="error"><%= @nil_error %></p>
                <%= form_with(url: "/reserves/#{@room.id}/new", method: :post) do |f| %>
                 <p><%= f.label :start_day, "開始日", class:"label" %></p>
                 <p class="error"><%= @start_error %></p>
                 <%= f. date_field :start_day, class: "reserve-field" %>
                 <p><%= f.label :end_day, "終了日", class:"label" %></p>
                 <p class="error"><%= @end_error %></p>
                 <%= f. date_field :end_day, class: "reserve-field" %>
                 <p><%= f.label :count, "人数", class:"label" %></p>
                 <p class="error"><%= @people_error %></p>
                 <%= f. number_field :count, class: "reserve-field" %>
                 <%= f.submit "予約する", class: "reserve-btn btn" %>
                <% end %>
            </div>
        </div>
    </div>
</div>